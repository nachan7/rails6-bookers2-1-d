<table class="table table-hover table-inverse">
    <h2>Books search for "<%= @word %></h2>
    <!--検索対象モデルがUserではない時(= 検索対象モデルがBookの時) -->
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th>Tag</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
      <tr>
        <td><%= image_tag book.user.get_profile_image, size:'100x100' %></td>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to book.tag, tag_search_path(word: book.tag) %></td>
        <th id="favorite_btn_<%= book.id %>">
         <%= render 'favorites/favorite', book: book %>
        </th>
        <th>
        コメント件数：<%= book.book_comments.count %>
        </th>
        <td><%= render "books/static_rate", book: book %></td>
        </tr>
      <% end %>
    </tbody>
</table>